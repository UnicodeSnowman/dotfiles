
function md() {
    mkdir -p "$@" && cd "$@"
}

function server {
  port="${1:-3000}"
  ruby -r webrick -e "s = WEBrick::HTTPServer.new(:Port => $port, :DocumentRoot => Dir.pwd); trap('INT') { s.shutdown }; s.start"
}

function local {
  ruby ~/Documents/dev/lib/scripts/start_local_portal.rb "cap.quintech.local"
}

function vzdemo {
  ruby ~/Documents/dev/lib/scripts/start_local_portal.rb "vzdemo.rova.com"
}
